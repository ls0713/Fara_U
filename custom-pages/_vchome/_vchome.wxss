.section-title {
    font-size: 30rpx!important;
}

.section-status {
    height: auto;
    flex-grow: 0;
    margin: 40rpx 0;
    --ui-status-bg: transparent;
}

.types-list {
    display: flex;
    flex-wrap: wrap;
    margin: 30rpx 20rpx;
}

.types-item {
    width: 350rpx;
    height: 160rpx;
    border-radius: 20rpx;
    background-color: var(--section-bg);
    box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04);
    overflow: hidden;
    position: relative;
    transform: translateZ(0);
}

.types-item:nth-child(odd) {
    margin-right: 10rpx;
}

.types-item._hover>._image {
    transform: scale(1.1);
}

.types-item>._image {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    transition: transform .4s ease;
    transition: transform .4s ease,-webkit-transform .4s ease;
}

.types-item>._content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0,0,0,.5);
    padding: 10rpx 20rpx 20rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.types-item ._name {
    color: #fff;
    font-weight: bold;
    font-size: 34rpx;
    letter-spacing: .04em;
    line-height: 1.6;
}

.home-section-title {
    color: var(--light-14);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 72rpx;
}

.home-section-title>._text {
    display: inline-block;
    font-weight: bold;
    font-size: 34rpx;
    letter-spacing: .2em;
    text-indent: .2em;
    text-shadow: 0 4rpx 0 var(--block-d-010);
    position: relative;
}

.home-section-title>._text:before,.home-section-title>._text:after {
    content: '';
    position: absolute;
    top: 50%;
    height: 0;
    width: 60rpx;
    border-bottom: 2rpx solid var(--line-d-020);
    margin: 0 10rpx;
}

.home-section-title>._text:before {
    right: 100%;
}

.home-section-title>._text:after {
    left: 100%;
}

.history-list-scroll {
    height: -webkit-fit-content;
    width: 100%;
    overflow: hidden;
}

.history-list {
    display: flex;
    width: -webkit-fit-content;
    padding: 0 10rpx 20rpx 10rpx;
}

.history-item {
    width: -webkit-max-content;
    margin: 0 10rpx;
    max-width: 400rpx;
    padding: 18rpx;
    font-size: 24rpx;
    border: 1rpx solid var(--line-d-004);
    border-radius: 20rpx;
    background-color: var(--section-bg);
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
    display: flex;
    overflow: hidden;
    transform: translateZ(0);
    backdrop-filter: var(--block-blur-6);
    letter-spacing: .02em;
}

.history-item._hover {
    box-shadow: 0 4rpx 14rpx 2rpx rgba(0,0,0,.06);
}

.history-item>._cover {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

.history-item ._info {
    flex: 1 1 0%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    padding: 6rpx 0;
}

.history-item ._title {
    font-weight: bold;
    font-size: 1.2em;
    letter-spacing: .06em;
    line-height: 1.2em;
    max-height: 2.4em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: var(--light-20);
}

.history-item ._speaker {
    margin-top: auto;
    color: var(--light-40);
}