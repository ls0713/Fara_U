._vc-list-scroll._scroll-free {
    height: -webkit-fit-content;
    width: 100%;
    overflow: hidden;
}

._scroll-free ._vc-list {
    display: flex;
    width: -webkit-fit-content;
    padding: 0 10rpx 20rpx 10rpx;
}

._scroll-free ._vc-item {
    width: -webkit-max-content;
    margin: 0 10rpx;
    max-width: 500rpx;
    padding: 20rpx 18rpx;
    font-size: 24rpx;
    border: 1rpx solid var(--line-d-004);
    border-radius: 20rpx;
    background-color: var(--section-bg);
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
}

._scroll-free ._vc-item._hover {
    box-shadow: 0 4rpx 14rpx 2rpx rgba(0,0,0,.06);
}

._scroll-free ._vc-item>._cover {
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

._scroll-free ._vc-item ._extra {
    font-size: 28rpx;
}

._scroll-free ._vc-item ._price {
    font-size: 36rpx;
}

._scroll-free ._vc-item ._sold {
    display: none;
}

._vc-list-scroll._scroll-order {
    height: -webkit-fit-content;
    width: 100%;
    overflow: hidden;
}

._scroll-order .vc-list {
    padding: 0 10rpx 20rpx 10rpx;
    display: flex;
    width: -webkit-fit-content;
}

._scroll-order ._vc-item {
    margin: 0 10rpx;
    width: 180rpx;
    display: block;
    text-align: center;
    padding: 10rpx;
    border-radius: 10rpx;
    background-color: var(--section-bg);
    border: 1rpx solid var(--line-d-004);
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
}

._scroll-order ._vc-item._hover {
    box-shadow: 0 4rpx 14rpx 2rpx rgba(0,0,0,.06);
}

._scroll-order ._vc-item:not(:last-of-type) {
}

._scroll-order ._vc-item>._cover {
    width: 180rpx;
    height: 180rpx;
}

._scroll-order ._vc-item ._info {
    display: block;
}

._scroll-order ._vc-item ._title {
    display: block;
    font-size: 24rpx;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: var(--light-30);
    margin: 10rpx 0;
}

._scroll-order ._vc-item ._extra {
    display: block;
}

._scroll-order ._vc-item ._price {
    font-size: 34rpx;
}

._scroll-order ._vc-item ._sold {
    display: none;
}

._column-one ._vc-item {
    height: 220rpx;
    margin: 20rpx;
    border-radius: 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    transition: background-color .2s ease;
    box-shadow: 0 6rpx 16rpx rgba(0,0,0,.04);
}

._column-one ._vc-item._hover {
    background-color: var(--section-bg);
}

._column-one ._vc-item:not(:last-child) {
    border-bottom: 1rpx solid var(--line-d-004);
}

._column-one ._vc-item>._cover {
    width: 220rpx;
    height: 100%;
}

._column-one ._vc-item ._info {
    padding: 14rpx 20rpx 20rpx 20rpx;
}

._column-one ._vc-item ._extra {
    font-size: 28rpx;
    justify-content: flex-end;
}

._column-one ._vc-item ._price {
    font-size: 36rpx;
}

._vc-list._column-two {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 0 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

._column-two ._vc-item {
    width: 348rpx;
    margin-bottom: 14rpx;
    flex-direction: column;
    border-radius: 10rpx;
    background-color: var(--section-bg);
    overflow: hidden;
    border: 1rpx solid var(--line-d-004);
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
}

._column-two ._vc-item._hover {
    box-shadow: 0 4rpx 14rpx 2rpx rgba(0,0,0,.06);
}

._column-two ._vc-item>._cover {
    width: 100%;
    height: 348rpx;
    border-radius: 0;
}

._column-two ._vc-item>._info {
    padding: 20rpx;
}

._column-two ._vc-item ._price {
    font-size: 36rpx;
}

._vc-item {
    display: flex;
    font-size: 24rpx;
    background-color: var(--section-bg);
    overflow: hidden;
    transform: translateZ(0);
    backdrop-filter: var(--block-blur-6);
    letter-spacing: .02em;
}

._vc-item>._info>._extra {
    margin-top: auto;
    display: flex;
    align-items: flex-end;
}

._vc-item ._title {
    font-size: 1.3em;
    letter-spacing: .06em;
    line-height: 1.4em;
    max-height: 2.8em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: var(--light-20);
    font-weight: bold;
}

._vc-item ._intro {
    line-height: 1.4;
    max-height: 2.8em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: var(--light-60);
    margin: 10rpx 0;
}

._vc-item>._cover {
    flex-shrink: 0;
    background-color: var(--block-d-002);
}

._vc-item>._info {
    flex: 1 1 0%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

._vc-item ._ios {
    font-size: 1em;
    color: var(--light-60);
}

._vc-item ._own {
    font-size: 1.1em;
    font-weight: bold;
    color: var(--light-50);
}

._vc-item ._sold {
    font-size: 1em;
    color: var(--light-50);
    margin-right: auto;
}