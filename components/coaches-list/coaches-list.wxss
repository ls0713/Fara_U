._coaches-list {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}

._coaches-list:not(:last-child) {
    margin-bottom: 20rpx;
}

._coaches-item {
    position: relative;
    border-radius: 20rpx;
    background-color: var(--section-bg);
    box-shadow: 0 6rpx 16rpx rgba(0,0,0,.04);
    overflow: hidden;
    transform: translateZ(0);
    display: flex;
    height: 240rpx;
    backdrop-filter: var(--block-blur-6);
}

._coaches-item:not(:last-child) {
    margin-bottom: 20rpx;
}

._coaches-item ._avatar {
    flex-shrink: 0;
    width: 240rpx;
    height: 100%;
    background-color: var(--block-d-004);
}

._coaches-item ._private-flag {
    position: absolute;
    right: 0;
    top: 0;
    font-size: 30rpx;
    line-height: 50rpx;
    padding: 0 20rpx;
    background-color: var(--theme-color);
    color: var(--theme-color-front);
    border-radius: 0 0 0 10rpx;
}

._coaches-item ._info {
    flex: 1 1 0%;
    height: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

._coaches-item ._line {
    display: flex;
    align-items: flex-end;
    overflow: hidden;
}

._coaches-item ._bottom {
    margin-top: auto;
}

._coaches-item ._name {
    color: var(--light-20);
    font-size: 32rpx;
    font-weight: bold;
    letter-spacing: .06em;
    line-height: 1.4;
    white-space: nowrap;
}

._coaches-item ._info>._name {
    margin-bottom: 4rpx;
}

._coaches-item ._line>._name {
    margin-right: 10rpx;
}

._coaches-item ._intro {
    font-size: 28rpx;
    line-height: 1.4;
    color: var(--light-60);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

._coaches-item ._min-order {
    font-size: 26rpx;
    color: var(--light-40);
}

._coaches-item ._unit-price {
    margin-left: auto;
    font-size: 26rpx;
    font-weight: bold;
    color: var(--light-30);
}

._coaches-item ._price {
    font-size: 34rpx;
}

._coaches-item ._professional {
    color: var(--light-40);
    margin-top: auto;
    line-height: 1.4;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    white-space: pre-wrap;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

._coaches-item ._skillful {
    line-height: 1;
    font-size: 24rpx;
    margin: 16rpx -10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

._coaches-item ._skillful-item {
    display: inline-block;
    padding: 6rpx;
    color: var(--light-50);
    border: 1rpx solid var(--light-80);
    margin: 0 10rpx 10rpx 0;
}