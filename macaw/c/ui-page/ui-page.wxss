.ui-page {
    position: relative;
    background-color: var(--page-background-color);
    height: 100%;
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background-color: var(--page-background-color);
}

.ui-page-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.ui-page-content {
    height: 100%;
    flex: 1 1 0%;
    min-height: 0%;
    overflow: hidden;
    position: relative;
    z-index: 1;
}