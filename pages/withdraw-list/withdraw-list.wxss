@import "../../wuBaseWxss/2.wxss";

.main-tabs {
    display: block;
    border-top: 1rpx solid var(--btn-border-color);
}

.main-view {
    box-sizing: border-box;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.result-swiper {
    flex: 1 1 0%;
    overflow: hidden;
}

.result-view {
    height: 100%;
    overflow: hidden;
}

.withdraw-item {
    background-color: var(--section-bg);
    backdrop-filter: var(--block-blur-4);
    margin: 20rpx;
    border-top: 1rpx solid var(--line-d-006);
    border-bottom: 1rpx solid var(--line-d-006);
    font-size: 28rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 16rpx 4rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
    color: var(--light-40);
}

.withdraw-item>._top {
    height: 70rpx;
    padding: 0 20rpx;
    border-bottom: 1rpx solid var(--line-d-006);
    display: flex;
    align-items: center;
}

.withdraw-item ._status {
    color: var(--theme-color-front);
    background-color: var(--theme-color);
    line-height: 40rpx;
    padding: 0 10rpx;
    border-radius: 10rpx;
}

.withdraw-item ._time {
    margin-left: auto;
}

.withdraw-item ._content {
    font-size: 40rpx;
    padding: 20rpx;
    color: var(--light-30);
    font-weight: bold;
}