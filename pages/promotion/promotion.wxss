.promotion-view {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

.promotion-header {
    flex-shrink: 0;
    width: 100%;
    position: relative;
}

.promotion-image {
    position: absolute;
    width: 100%;
    height: 100%;
}

.promotion-mask {
    position: relative;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    width: 100%;
    min-height: 300rpx;
    display: flex;
    flex-direction: column;
}

.promotion-info {
    flex: auto;
    display: flex;
    flex-direction: column;
    padding: 0 20rpx 20rpx 20rpx;
    box-sizing: border-box;
    text-shadow: 0 4rpx 10rpx rgba(0,0,0,.1);
}

.promotion-title {
    margin: auto 0;
    text-align: center;
    font-size: 46rpx;
    font-weight: bold;
    line-height: 1.4;
    letter-spacing: .04em;
    padding-bottom: 10rpx;
}

.promotion-time {
    font-size: 28rpx;
    margin-top: auto;
    align-self: flex-end;
}

.promotion-time:before {
    margin-right: 10rpx;
}

.promotion-content {
    font-size: 30rpx;
    line-height: 1.4;
    flex-grow: 1;
    flex-shrink: 0;
    padding: 20rpx;
    background-color: var(--section-bg);
}

.promotion-call {
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    background-color: var(--theme-color);
    color: var(--theme-color-front);
    z-index: 9;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 70rpx;
    box-shadow: 0 0 20rpx rgba(0,0,0,.5);
}