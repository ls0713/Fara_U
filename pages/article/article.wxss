.article-view {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

.article-header {
    flex-shrink: 0;
    width: 100%;
    position: relative;
}

.article-image {
    position: absolute;
    width: 100%;
    height: 100%;
}

.article-mask {
    position: relative;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    width: 100%;
    min-height: 300rpx;
    display: flex;
    flex-direction: column;
}

.article-info {
    flex: auto;
    display: flex;
    flex-direction: column;
    padding: 0 20rpx 20rpx 20rpx;
    box-sizing: border-box;
    text-shadow: 0 4rpx 10rpx rgba(0,0,0,.1);
}

.article-title {
    margin: auto 0;
    text-align: center;
    font-size: 46rpx;
    font-weight: bold;
    line-height: 1.4;
    letter-spacing: .04em;
    padding-bottom: 10rpx;
}

.article-time {
    font-size: 28rpx;
    margin-top: auto;
    align-self: flex-end;
}

.article-time:before {
    margin-right: 10rpx;
}

.article-content {
    font-size: 30rpx;
    line-height: 1.4;
    flex-grow: 1;
    flex-shrink: 0;
    padding: 20rpx;
    background-color: var(--section-bg);
}

.article-action {
    margin-top: 40rpx;
    width: 100%;
    min-height: 100%;
    background-color: var(--block-d-004);
}