.store-image {
    display: block;
    width: 100%;
    height: 400rpx;
}

.store-section {
    background-color: var(--section-bg);
    margin-bottom: 10rpx;
}

.store-box-static {
    backdrop-filter: var(--block-blur-2);
}

.store-box-fixed {
    position: absolute;
    width: 100%;
    background-color: var(--top-background-color);
    -webkit-text-fill-color: var(--top-front);
    border-bottom: 1rpx solid var(--line-d-006);
    box-shadow: 0 16rpx 16rpx rgba(0,0,0,.04);
}

.store-section-title {
    padding: 0 20rpx;
    text-align: left;
    font-weight: bold;
    font-size: 32rpx;
    line-height: 60rpx;
    color: var(--light-20);
}

.store-stroke-section {
    backdrop-filter: var(--block-blur-4);
}

.store-stroke {
}

.store-stroke ._prefer {
    background-color: var(--theme-color);
    color: var(--theme-color-front);
    border-radius: 10rpx;
    padding: 0 10rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    margin-right: 10rpx;
}

.store-stroke ._site,.store-stroke ._walk {
    color: var(--light-60);
}

.store-stroke ._site text {
    font-weight: bold;
}

.store-stroke text {
    color: var(--light-30);
    padding: 0 10rpx;
}

.store-stroke ._tip {
    padding: 20rpx;
    padding-left: 50rpx;
    font-size: 28rpx;
    color: var(--light-30);
}