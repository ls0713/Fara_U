.buy-item-box {
    display: flex;
    overflow: hidden;
    padding: 20rpx;
}

.buy-item-box ._image {
    flex-shrink: 0;
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.buy-item-box ._info {
    flex: 1 1 0%;
    overflow: hidden;
    color: var(--light-30);
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    line-height: 1.4;
}

.buy-item-box ._title {
    font-weight: bold;
    font-size: 40rpx;
    letter-spacing: .04em;
    margin-bottom: 6rpx;
}

.buy-item-box ._bottom {
    margin-top: auto;
    display: flex;
    align-items: flex-end;
}

.buy-item-box-coach ._min-order {
    margin-right: auto;
}

.buy-item-box-coach ._price {
    font-size: 40rpx;
}

.buy-item-box-vc ._image {
    height: 150rpx;
}

.buy-item-box-vc ._title {
    font-size: 36rpx;
}

.buy-item-box-vc ._price {
    margin-left: auto;
    font-size: 40rpx;
}